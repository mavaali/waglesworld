---
import Base from '../layouts/Base.astro'

const jsonLd = JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: 'Mihir Wagle',
  url: 'https://waglesworld.com/about',
  jobTitle: 'Technologist',
  worksFor: {
    '@type': 'Organization',
    name: 'Microsoft',
  },
  alumniOf: {
    '@type': 'CollegeOrUniversity',
