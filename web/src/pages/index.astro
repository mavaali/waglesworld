---
import Base from '../layouts/Base.astro'
import {sanityClient} from 'sanity:client'
import {postsQuery, urlFor, readingTime} from '../utils/sanity'

const posts = await sanityClient.fetch(postsQuery)
const recentPosts = posts.slice(0, 5)
---

<Base title="waglesworld">
  <h1>waglesworld</h1>
  <p class="intro">Welcome to my corner of the internet.</p>

  {
    recentPosts.length > 0 && (
      <section class="recent-posts">
        <h2>Recent posts</h2>
        <ul>
          {recentPosts.map((post: any) => (
            <li>
              <a href={`/blog/${post.slug.current}`}>
                <span class="post-title">{post.title}</span>
                <span class="post-meta">
                  {post.publishedAt &&
                    new Date(post.publishedAt).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric',
                    })}
                  {post.body && ` \u00b7 ${readingTime(post.body)} min read`}
                </span>
              </a>
            </li>
          ))}
        </ul>
        <a href="/blog" class="see-all">See all posts &rarr;</a>
      </section>
    )
  }

  <section class="subscribe">
    <h2>Subscribe</h2>
    <p>Get new posts delivered to your inbox.</p>
    <form
      action="https://app.kit.com/forms/9065996/subscriptions"
      method="post"
      class="subscribe-form"
    >
      <input type="email" name="email_address" placeholder="your@email.com" required />
      <button type="submit">Subscribe</button>
    </form>
    <p class="rss-link">Or subscribe via <a href="/rss.xml">RSS</a></p>
  </section>
</Base>

<style>
  .intro {
    color: #666;
    margin-bottom: 3rem;
    font-size: 1.1rem;
  }

  .recent-posts ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1rem;
  }

  .recent-posts a {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
    padding: 0.5rem 0;
  }

  .post-title {
    font-weight: 500;
  }

  .post-meta {
    color: #666;
    font-size: 0.875rem;
    white-space: nowrap;
  }

  .see-all {
    display: inline-block;
    margin-top: 1.5rem;
    color: #666;
    font-size: 0.875rem;
  }

  .subscribe {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #eee;
  }

  .subscribe p {
    color: #666;
    margin-bottom: 1rem;
  }

  .subscribe-form {
    display: flex;
    gap: 0.5rem;
  }

  .subscribe-form input {
    flex: 1;
    padding: 0.5rem 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 0.95rem;
    font-family: inherit;
  }

  .subscribe-form button {
    padding: 0.5rem 1.25rem;
    background: #1a1a1a;
    color: #fff;
    border: none;
    border-radius: 4px;
    font-size: 0.95rem;
    font-family: inherit;
    cursor: pointer;
  }

  .subscribe-form button:hover {
    background: #333;
  }

  .rss-link {
    font-size: 0.8rem;
    margin-top: 0.5rem;
  }

  .rss-link a {
    color: #0066cc;
    text-decoration: underline;
  }
</style>
