---
import Base from '../layouts/Base.astro'
import {sanityClient} from 'sanity:client'
import {postsQuery, urlFor} from '../utils/sanity'

const posts = await sanityClient.fetch(postsQuery)
const recentPosts = posts.slice(0, 5)
---

<Base title="waglesworld">
  <h1>waglesworld</h1>
  <p class="intro">Welcome to my corner of the internet.</p>

  {
    recentPosts.length > 0 && (
      <section class="recent-posts">
        <h2>Recent posts</h2>
        <ul>
          {recentPosts.map((post: any) => (
            <li>
              <a href={`/blog/${post.slug.current}`}>
                <span class="post-title">{post.title}</span>
                <span class="post-meta">
                  {post.publishedAt &&
                    new Date(post.publishedAt).toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'short',
                      day: 'numeric',
                    })}
                  {post.estimatedReadingTime && ` \u00b7 ${post.estimatedReadingTime} min read`}
                </span>
              </a>
            </li>
          ))}
        </ul>
        <a href="/blog" class="see-all">See all posts &rarr;</a>
      </section>
    )
  }
</Base>

<style>
  .intro {
    color: #666;
    margin-bottom: 3rem;
    font-size: 1.1rem;
  }

  .recent-posts ul {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-top: 1rem;
  }

  .recent-posts a {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: 1rem;
    padding: 0.5rem 0;
  }

  .post-title {
    font-weight: 500;
  }

  .post-meta {
    color: #666;
    font-size: 0.875rem;
    white-space: nowrap;
  }

  .see-all {
    display: inline-block;
    margin-top: 1.5rem;
    color: #666;
    font-size: 0.875rem;
  }
</style>
