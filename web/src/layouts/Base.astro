---
interface Props {
  title: string
  description?: string
  image?: string
  type?: string
}

const {title, description = 'waglesworld - a personal blog', image, type = 'website'} = Astro.props
const canonicalURL = new URL(Astro.url.pathname, Astro.site)
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.28/dist/katex.min.css" integrity="sha384-MlJdn/WNKDGXveldHDdyRP1R4CTHkXFb6TvkY0dBNTkPcGpiMpQH+Pp5fCo0dDXw" crossorigin="anonymous" />
    <link rel="alternate" type="application/rss+xml" title="Wagle's World RSS Feed" href="/rss.xml" />
    <meta property="og:type" content={type} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="waglesworld" />
    {image && <meta property="og:image" content={image} />}
    <meta name="twitter:card" content={image ? 'summary_large_image' : 'summary'} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    {image && <meta name="twitter:image" content={image} />}
    <title>{title}</title>
  </head>
  <body>
    <header>
      <nav>
        <a href="/" class="site-title">waglesworld</a>
        <a href="/blog">blog</a>
        <a href="/about">about</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>&copy; {new Date().getFullYear()} waglesworld</p>
      <div class="socials">
        <a href="https://www.linkedin.com/in/mihirwagle" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 0 1-2.063-2.065 2.064 2.064 0 1 1 2.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
        </a>
        <a href="https://bsky.app/profile/waglesworld.com" target="_blank" rel="noopener noreferrer" aria-label="Bluesky">
          <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 10.8c-1.087-2.114-4.046-6.053-6.798-7.995C2.566.944 1.561 1.266.902 1.565.139 1.908 0 3.08 0 3.768c0 .69.378 5.65.624 6.479.785 2.627 3.59 3.513 6.182 3.2-3.882.562-8.146 1.96-5.025 6.726C3.87 23.6 7.862 21.449 12 15.882c4.138 5.567 8.086 7.633 10.22 4.291 3.12-4.766-1.144-6.164-5.026-6.726 2.592.313 5.397-.573 6.182-3.2.246-.828.624-5.788.624-6.479 0-.688-.139-1.86-.902-2.203-.659-.3-1.664-.62-4.3 1.24C16.046 4.748 13.087 8.687 12 10.8z"/></svg>
        </a>
      </div>
    </footer>
    <style is:global>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.6;
        color: #1a1a1a;
        max-width: 720px;
        margin: 0 auto;
        padding: 2rem 1rem;
      }

      header nav {
        display: flex;
        gap: 1.5rem;
        align-items: baseline;
        padding-bottom: 2rem;
        border-bottom: 1px solid #eee;
        margin-bottom: 2rem;
      }

      .site-title {
        font-weight: 700;
        font-size: 1.2rem;
        margin-right: auto;
      }

      a {
        color: #1a1a1a;
        text-decoration: none;
      }

      a:hover {
        text-decoration: underline;
      }

      main {
        min-height: 60vh;
      }

      footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid #eee;
        color: #666;
        font-size: 0.875rem;
      }

      .socials {
        display: flex;
        gap: 0.75rem;
        margin-top: 0.5rem;
        align-items: center;
      }

      .socials a {
        color: #999;
        display: flex;
        transition: color 0.15s;
      }

      .socials a:hover {
        color: #1a1a1a;
        text-decoration: none;
      }

      h1 {
        font-size: 2rem;
        margin-bottom: 1rem;
      }

      h2 {
        font-size: 1.5rem;
        margin-bottom: 0.75rem;
      }

      img {
        max-width: 100%;
        height: auto;
        border-radius: 4px;
      }
    </style>
  </body>
</html>
